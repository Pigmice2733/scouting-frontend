      "^.+\\.ts$": "ts-jest",
      "^.+\\.jsx$": "ts-jest",
      "^.+\\.js$": "ts-jest"
    },
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
