{
  "private": true,
  "name": "pigmice_scouting_frontend",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm run -s dev",
    "build": "webpack --env.NODE_ENV=production",
    "dev": "webpack-dev-server --open --progress --env.NODE_ENV=development",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "indent": [
        "error",
        2
      ],
      "semi": [
        "error",
        "never"
      ],
      "react/jsx-indent-props": [
        "error",
        2
      ],
      "lines-around-comment": "off"
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "if-env": "^1.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "loose": true,
          "uglify": true,
          "exclude": [
            "transform-regenerator",
            "transform-es2015-typeof-symbol"
          ],
          "targets": {
            "browsers": "> 5%"
          }
        }
      ],
      [
        "@babel/stage-1",
        {}
      ]
    ],
    "plugins": [
      [
        "@babel/transform-react-jsx",
        {
          "pragma": "h"
        }
      ]
    ]
  },
  "dependencies": {
    "@babel/core": "^7.0.0-beta.31",
    "@babel/plugin-transform-react-jsx": "^7.0.0-beta.31",
    "@babel/preset-env": "^7.0.0-beta.31",
    "@babel/preset-stage-1": "^7.0.0-beta.31",
    "babel-loader": "8.0.0-beta.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-1": "^6.24.1",
    "css-loader": "^0.28.7",
    "extract-loader": "^1.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.1",
    "postcss-loader": "^2.0.8",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.5",
    "spike-css-standards": "^3.0.0",
    "style-loader": "^0.19.0",
    "sugarss": "^1.0.1",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
