.header
  background: #800080
  color: white
  box-shadow: 0 0 3px 3px #00000080
  display: flex
  align-items: center

  & h1
    margin: 0
    font-weight: bold
    font-size: 15px

  & a
    outline: none
    border-radius: 50%
    margin: 7px
    transition: background-color 0.3s ease

    &:hover, &:focus
      background: rgba(#fff, 0.1)

  & svg
    display: block
    margin: 8px
    height: 100%
