.list
  padding: 0
  list-style-type: none
  overflow-y: auto
  margin: 20px auto 0
  width: 100%

  & li
    max-width: 400px
    margin: 0 auto

  & a
    padding: 15px
    display: block
    transition: background-color 0.2s ease
    color: inherit
    text-decoration: none
    border-radius: 3px
    outline: none

    &:hover, &:focus
      background: rgba(#fff, 0.1)
