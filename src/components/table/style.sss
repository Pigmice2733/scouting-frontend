.table
  width: 100%
  text-align: center
  flex-grow: 1
  overflow-x: auto
  height: 100%

  & table
    border-collapse: collapse
    table-layout: fixed

  & th
    cursor: pointer
    user-select: none

  & td, & th
    padding: 15px
    white-space: nowrap

    &:nth-child(even)
      background: gray(0, 04%)

.statColumn
  font-size: 12px
  width: 150px
  min-width: 150px
  font-weight: bold
  text-align: left